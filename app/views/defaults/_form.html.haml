- model_instance = model_instance_for(controller)
= simple_form_for *bootstrap_form_url(model_instance) do |f|
  = f.error_notification

  = render "form_fields", :form => f

  .actions
    = yield :actions
    = link_to bootstrap_url, :class => BootstrapAdmin::default_actions_params[:back][:button_class] do
      = content_tag(:span, '',:class => BootstrapAdmin::default_actions_params[:back][:glyphicon_class]) if BootstrapAdmin::use_glyphicons? 
      = content_tag(:span, t(:back))
