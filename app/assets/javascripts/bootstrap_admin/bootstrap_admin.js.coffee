$ = jQuery
# ------------------------------------------------------------------------------
$("form.bootstrap_admin.search")
  .on "click", ".reset", ->
    window.location = $(this).closest("form").attr("action")
  .on "click", ".search", ->
    $(this).closest("form").submit()
# ------------------------------------------------------------------------------
$("#flash-area").on "click", ".close", ->
  $(this).closest(".alert").slideUp ->
    $(this).remove()
